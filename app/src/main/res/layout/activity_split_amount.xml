<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplitAmount">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/Amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:text="Total Amount"
        app:layout_constraintBottom_toTopOf="@id/mem1"
        app:layout_constraintStart_toStartOf="@+id/appBarLayout2"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mem1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:text="Member 1"
        app:layout_constraintStart_toStartOf="@+id/Amount"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

    <TextView
        android:id="@+id/amount1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Amount 1"
        app:layout_constraintBottom_toBottomOf="@+id/mem1"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout2"
        app:layout_constraintTop_toTopOf="@+id/mem1" />
 <TextView
        android:id="@+id/mem2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="37dp"
        android:text="Member 2"
        app:layout_constraintStart_toStartOf="@+id/mem1"
        app:layout_constraintTop_toBottomOf="@+id/mem1" />

    <TextView
        android:id="@+id/amount2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Amount 2"
        app:layout_constraintBottom_toBottomOf="@+id/mem2"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout2"
        app:layout_constraintTop_toTopOf="@+id/mem2" />
 <TextView
        android:id="@+id/mem3"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="37dp"
        android:text="Member 3"
        app:layout_constraintStart_toStartOf="@+id/mem2"
        app:layout_constraintTop_toBottomOf="@+id/mem2" />

    <TextView
        android:id="@+id/amount3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Amount 3"
        app:layout_constraintBottom_toBottomOf="@+id/mem3"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout2"
        app:layout_constraintTop_toTopOf="@+id/mem3" />
 <TextView
        android:id="@+id/mem4"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="37dp"
        android:text="Member 4"
        app:layout_constraintStart_toStartOf="@+id/mem3"
        app:layout_constraintTop_toBottomOf="@+id/mem3" />

    <TextView
        android:id="@+id/amount4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Amount 4"
        app:layout_constraintBottom_toBottomOf="@+id/mem4"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout2"
        app:layout_constraintTop_toTopOf="@+id/mem4" />

</androidx.constraintlayout.widget.ConstraintLayout>